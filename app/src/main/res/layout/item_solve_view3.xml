<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/solve_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/solve_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/item_solve_cube_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center_vertical"
                    android:text="@string/item_solve_cube_size"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/item_solve_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/item_solve_time"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/item_solve_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_weight="9"
                        android:gravity="center"
                        android:text="@string/item_solve_date"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:textColor="@color/black" />

                    <ImageButton
                        android:id="@+id/item_solve_delete_icon"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="0dp"
                        android:layout_gravity="end"
                        android:contentDescription="@string/delete_solve_btn"
                        android:layout_weight="1"
                        android:elevation="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icons8_remove_50w"
                        app:tint="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
